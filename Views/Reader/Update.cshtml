@model BooksWeb.Models.Reader

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">
    
    <h2>Books</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/book/read">Books</a></li>
            <li class="breadcrumb-item active" aria-current="page">Update a book</li>
        </ol>
    </nav>

    <form action="/reader/update/@Model.ReaderId" method="POST" class="col offset-md-2 col-8">
        <input placeholder="Name" name="Name" class="form-control" value="@Model.Name"/><br/>
        <input placeholder="Email" name="Email" class="form-control" value="@Model.Email"/><br/>
        <button class="btn btn-primary">Salvar</button>
        <a class="btn btn-outline-secondary" href="/reader/read">Voltar</a>
    </form>
</body>
</html>