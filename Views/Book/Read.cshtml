@model List<BooksWeb.Models.Book>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=Book, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="container">
    <h2>Books</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Books</li>
        </ol>
    </nav>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Gender</th>
                <th>Synopsis</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        @foreach(var book in Model) {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Gender</td>
            <td>@book.Synopsis</td>
            <td>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-outline-success"><i class="bi-pencil-square"></i> Edit</button>
                    <button type="button" class="btn btn-sm btn-outline-danger"><i class="bi-trash"></i> Delete</button>
                </div>
            </td>
        </tr>
        }
    </table>

    <a class="btn btn-primary" href="/book/create">Adicionar</a>

</body>
</html>